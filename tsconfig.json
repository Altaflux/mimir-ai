{
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs", /* Specify what module code is generated. */                
    "lib": [
      "ES2021",
      "ES2022.Object",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist",
  
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": [
      "node",
    ],
  }
}